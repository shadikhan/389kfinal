<br>
<h1 style="text-align: center">{{h1}}</h1>
<h5 style="text-align: center">{{h5}}</h5>
<br>
<div class="container">
    <div class="row">
        <div class="card-group">
            {{#each recipes}}
                <div class="col col-xs-auto" id="{{this.name}}">
                    <div class="card mb-4" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">{{this.meal}} | {{this.rating}}/5 stars | {{this.minutes}} minutes</h6>
                            <p class="card-text">{{this.description}}</p>
                            <a href="/recipe/{{this._id}}" class="card-link">Instructions & Ingredients</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>